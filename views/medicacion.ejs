        <div class="container mt-4 py-5 ">
          <div class="row py-3">
              <div class="col-md-8 offset-md-2">
                  <h3>Fórmula Médica Ambulatoria </h3> 
                  <hr>
                  <form id="form">
                    <div class="row mb-3">
                      <div class="col-md-4">
                          <label for="nombre" class="form-label">Departamento:</label>
                          <input type="text" class="form-control" id="nombre" required="required">
                      </div>
                      <div class="col-md-4">
                          <label for="apellido" class="form-label">Municipio:</label>
                          <input type="text" class="form-control" id="apellido" required="required">
                      </div>
                      <div class="col-md-4">
                        <label for="apellido" class="form-label">Fecha de formulación:</label>
                        <input type="date" class="form-control" id="apellido" required="required">
                    </div>
                  
                  </div>
                      <div class="row mb-3">
                        <div class="col-md-5">
                          <label for="apellido" class="form-label">Nombre Completo:</label>
                          <input type="text" class="form-control" id="apellido" required="required">
                        </div>
                        <div class="col-md-4">
                          <label for="apellido" class="form-label">Cédula:</label>
                          <input type="number" class="form-control" id="apellido" required="required">
                        </div>
                        <div class="col-md-3">
                          <label for="apellido" class="form-label">Edad:</label>
                          <input type="number" class="form-control" id="apellido" required="required">
                        </div>
                      </div>

                      <div class="row mb-3">
                          <div class="col-md-6">
                              <label for="nombre" class="form-label">Empresa:</label>
                              <input type="text" class="form-control" id="nombre" required="required">
                          </div>
                          <div class="col-md-6">
                              <label for="apellido" class="form-label">Diagnóstico:</label>
                              <input type="text" class="form-control" id="apellido" required="required">
                          </div>
                      </div>
                      <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="nombre" class="form-label">Tipo de Usuario:</label>
                            <input type="text" class="form-control" id="nombre" required="required">
                        </div>
                        <div class="col-md-3">
                            <label for="apellido" class="form-label">Talla (m):</label>
                            <input type="number" class="form-control" id="apellido" required="required">
                        </div>
                        <div class="col-md-3">
                          <label for="apellido" class="form-label">Peso (kg):</label>
                          <input type="number" class="form-control" id="apellido" required="required">
                      </div>
                    </div>
                      <div class="row mb-3">
                          <div class="col-md-6">
                              <label for="direccion" class="form-label">Nombre de quien autoriza:</label>
                              <input type="text" class="form-control" id="direccion" required="required">
                          </div>
                          <div class="col-md-6">
                              <label for="telefono" class="form-label">Número de autorización:</label>
                              <input type="text" class="form-control" id="telefono" required="required">
                          </div>
                      </div>
                      <table class="table table-dark table-striped">
                        <thead>
                            <tr>
                                <th class="centrado">No.</th>
                                <th class="centrado">Medicamento</th>
                                <th class="centrado">Dosis</th>
                                <th class="centrado">Via</th>
                                <th class="centrado">Frecuencia</th>
                                <th class="centrado">Duración</th>
                                <th class="centrado">Cantidad</th>
                            </tr>
                        </thead>
                        <tbody>
                          <tr>
                            <th class="centrado"> 1</th>
                            <th class="centrado"><input type="text" class="form-control" id="telefono"></th>
                            <th class="centrado"><input type="text" class="form-control" id="telefono"></th>
                            <th class="centrado"><input type="text" class="form-control" id="telefono"></th>
                            <th class="centrado"><input type="text" class="form-control" id="telefono"></th>
                            <th class="centrado"><input type="text" class="form-control" id="telefono"></th>
                            <th class="centrado"><input type="text" class="form-control" id="telefono"></th>
                          </tr>
                        </tbody>  
                      </table>

                      <div class="mb-3">
                        <h5>Nota:</h5>                            
                        <textarea class="form-control" id="descripcion" placeholder="Nota" name="comentarios" rows="3"></textarea>
                      </div>
                      
                      <div class="row mb-3">
                        <div class="row mb-4">
                        <div class="col-md-6" >
                          <hr size= 5px style= "width: 75%; ">
                            <h6>Firma Profesional</h6>
                        </div>
                        <div class="col-md-6">
                          <hr size= 5px style="width: 75%;" >
                            <h6>Firma Usuario</h6>
                        </div>
                      </div>
                      <button onclick="window.print()" id="pdf" type="submit" class="btn btn-success mb-4" >Imprimir </button>
                      <button id="limpiar" class="btn btn-secondary" type="reset">Limpiar</button>
                      <!-- <input id="pdf" type="button" name="imprimir" value="Imprimir" class="btn btn-success mb-4" onclick="window.print();"> -->
              </div>
          </div>
      </div>
        <!-- Bootstrap js -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
